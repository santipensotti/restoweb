@page "/mesa/{restaurantId}/{tableId}"
@inject NavigationManager Navigation
@inject HttpClient Http

@code {
    [Parameter]
    public string restaurantId { get; set; }
    
    [Parameter]
    public string tableId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetAsync($"api/navigation/validate/{restaurantId}/{tableId}");
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo($"/mesasegura/{restaurantId}/{tableId}");
            }
            else
            {
                Navigation.NavigateTo($"/mesadenegada/{restaurantId}/{tableId}");
            }
        }
        catch
        {
            Navigation.NavigateTo($"/mesadenegada/{restaurantId}/{tableId}");
        }
    }
}
